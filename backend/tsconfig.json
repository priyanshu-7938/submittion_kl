{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",          // Change this
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "generated"],
  "exclude": ["node_modules", "dist"]
}
